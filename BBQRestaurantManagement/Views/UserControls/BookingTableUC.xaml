<UserControl x:Class="BBQRestaurantManagement.Views.UserControls.BookingTableUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BBQRestaurantManagement.Views.UserControls"
             mc:Ignorable="d"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextElement.FontWeight="Regular"
             TextElement.FontSize="13"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="{DynamicResource MaterialDesignFont}"
             d:DesignHeight="672.04" d:DesignWidth="928">
    <Grid>
        <Label FontSize="30"
               FontWeight="Bold"
               HorizontalAlignment="Center"
               VerticalAlignment="Top" Margin="0,46,0,0">
            Thông tin đặt bàn
        </Label>

        <StackPanel VerticalAlignment="Top" 
                    Height="64" Width="772"
                    HorizontalAlignment="Center"
                    Margin="0,148,0,0">
            <Label Content="Họ và tên"
                   FontSize="17"
                   FontWeight="Bold"/>
            <TextBox materialDesign:HintAssist.Hint="Điền họ và tên"
                     FontSize="15"/>
        </StackPanel>

        <StackPanel Margin="78,216,475,392"
                    Height="64">
            <Label Content="Email"
                   FontSize="17"
                   FontWeight="Bold"/>
            <TextBox materialDesign:HintAssist.Hint="Điền địa chỉ email"
                     FontSize="15"/>
        </StackPanel>

        <StackPanel Height="64"
                    Margin="475,216,78,392">
            <Label Content="Số điện thoại"
                   FontSize="17"
                   FontWeight="Bold"/>
            <TextBox materialDesign:HintAssist.Hint="Điền số điện thoại"
                     FontSize="15"/>
        </StackPanel>

        <StackPanel Height="64"
                    Margin="78,289,615,319">
            <Label Content="Chọn ngày đặt bàn"
                   FontSize="17"
                   FontWeight="Bold"/>
            <DatePicker Width="235"
                        materialDesign:HintAssist.Hint="Chọn ngày đặt bàn"
                        materialDesign:TextFieldAssist.HasClearButton="True"
                        Style="{StaticResource MaterialDesignFloatingHintDatePicker}" 
                        Height="33"/>
        </StackPanel>

        <StackPanel Height="64"
                    Margin="349,289,345,319">
            <Label Content="Chọn ngày đặt bàn"
                   FontSize="17"
                   FontWeight="Bold"/>
            <materialDesign:TimePicker Width="235"
                                       materialDesign:HintAssist.Hint="Chọn giờ đặt bàn"
                                       Style="{StaticResource MaterialDesignFloatingHintTimePicker}"/>
        </StackPanel>

        <StackPanel Height="64"
            Margin="615,289,79,319">
            <Label Content="Số người"
                FontSize="17"
                FontWeight="Bold"/>
            <TextBox materialDesign:HintAssist.Hint="Điền số người"
                     FontSize="15" Height="35"/>
        </StackPanel>

        <StackPanel VerticalAlignment="Top" 
                    HorizontalAlignment="Center"
                    Height="162" Width="772" 
                    Margin="0,373,0,0">
            <Label Content="Ghi chú"
                   FontSize="17"
                   FontWeight="Bold"/>
            <TextBox Height="132"
                     AcceptsReturn="True"
                     IsEnabled="{Binding IsChecked, ElementName=MaterialDesignOutlinedTextBoxEnabledComboBox}"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto" 
                     Width="772"
                     HorizontalAlignment="Left"/>
        </StackPanel>

        <Button Width="100"
                Height="40"
                Content="Đặt"
                FontSize="17"
                FontWeight="Bold"
                Foreground="White"
                Background="#880e4f"
                IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                Style="{StaticResource MaterialDesignRaisedLightButton}"
                ToolTip="Resource name: MaterialDesignRaisedLightButton" 
                Margin="0,545,0,54"
                HorizontalAlignment="Center"/>
    </Grid>
</UserControl>
